@page
@model IndexModel
@{
    ViewData["Title"] = "Bienvenido";
}

<div class="text-center">
    <h1 class="display-4">Web Banking</h1>
    <p> Pruebe una de nuestras opciones</p>
</div>

<div class="container bg-white border-bottom box-shadow mb-3">
    <h3>
        Su Cuenta
    </h3>
    Cuenta : <label id="cuenta">N/A</label><br/>
    Saldo : <label id="saldo"> -</label><br/>
    Movimientos : <label id="Movimientos"> -</label><br/>
    <input type="submit" value="Apertura de Nueva Cuenta">
    <br />
</div>
<div class="container bg-white border-bottom box-shadow mb-3">
    <h3>Operaciones</h3>
    <label for="operacion">Operación : </label>
    <select class="dropdown" id="operacion" name="operacion">
        <option value="D">Depósito</option>
        <option value="R">Retiro</option>
    </select>
    <br />

    <label for="valor">Valor : </label>
    <input type="number" id="valor" placeholder="0.00" name="valor">
    <br />
    <input type="submit" value="Proceder">

</div>
